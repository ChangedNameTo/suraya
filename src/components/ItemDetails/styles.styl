.root
  font-size: 14px

  & + &
    padding-left: 30px
    margin-left: 30px
    border-left: 1px solid rgba(white, .2)

.itemSummary
  display: flex

.summaryMain
  flex: 1
  padding-left: 5px

.itemIcon
  display: block
  width: 50px
  height: 50px

.sub
  font-size: .85em
  opacity: .8
  margin-top: 2px

.sockets
  display: flex
  margin-top: 5px

.socket
  display: flex
  flex-direction: column
  // margin: 2px
  // padding: 2px
  // background: rgba(#3498db, .3)

  & + &
    margin-left: 5px
    padding-left: 5px
    border-left: 1px solid rgba(white, .1)

.perk
  border: 1px solid rgba(white, .2)
  border-radius: 100px
  display: inline-block

.activePerk
  border: 1px solid rgba(white, .5)
  background: rgba(white, .2)

.perkIcon
  display: block
  margin: 2px
  width: 25px
  height: 25px


.tooltipPerkDescription
.tooltipPerkName
  white-space: pre-line
  text-align: left
  display: inline-block

.tooltipPerkName
  display: block
  font-weight: bold
